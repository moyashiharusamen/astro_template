---
export interface Props {
  level: number;
  text: string;
}

const { level, text } = Astro.props;
const Heading = `h${level}`;
---

<header class:list={["root", `-${Heading}`]}>
  <Heading class:list="heading">{text}</Heading>
</header>

<style lang="scss">
  @use "../../style/global" as g;

  // ---------- 基底要素 ----------
  .root {
    // text-align: center;
  }

  .root.-h1 {
    margin: g.rem(64px) 0 g.rem(24px);
  }

  .root.-h2 {
    margin: g.rem(64px) 0 g.rem(24px);
  }

  .root.-h3 {
    margin: g.rem(40px) 0 g.rem(24px);
  }

  // ---------- 見出し要素 ----------
  .heading {
    font-weight: 500;
    color: g.$base-text-color;
  }

  .-h1 .heading {
    font-size: g.rem(32px);

    @include g.mediaQuery() {
      font-size: g.rem(42px);
    }
  }

  .-h2 .heading {
    font-size: g.rem(26px);

    @include g.mediaQuery() {
      font-size: g.rem(32px);
    }
  }

  .-h3 .heading {
    font-size: g.rem(22px);

    @include g.mediaQuery() {
      font-size: g.rem(26px);
    }
  }
</style>
