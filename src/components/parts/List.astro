---
export interface Props {
  text: Array<string>;
}

const { text } = Astro.props;
---

<div class="root">
  <ul class="list">
    {
      text.map(item => (
        <li
          class="item"
          set:html={item}
        ></li>
      ))
    }
  </ul>
</div>

<style lang="scss">
  @use "../../style/global" as g;

  // ---------- 基底要素 ----------
  .root {
    margin-top: g.rem(40px);

    @include g.mediaQuery() {
    }
  }

  // ---------- リスト要素 ----------
  .list {
    display: flex;
    flex-direction: column;
    gap: .6em;
  }

  .item {
    display: flex;
  }

  .item::before {
    content: "";
    display: block;
    width: .4em;
    height: .4em;
    margin-top: .6em;
    margin-right: .5em;
    background: g.$base-text-color;
    border-radius: 50vh;
  }
</style>
